{
  "manifest_version": 2,
  "name": "uws-metafilter-favourites-visualised",
  "version": "1.0",
  "description": "Adds visual cues to show favourites for each Metafilter post comment.",
  "icons": {
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.metafilter.com/*"],
      "js": ["content/index.js"],
      "css": ["content/index.css"]
    }
  ]
}